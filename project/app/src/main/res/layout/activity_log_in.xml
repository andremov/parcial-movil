<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/content_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/input_width"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/login_string"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorSoft"
        android:text="@string/back_button"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/form_height"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/label_username"
            android:layout_width="@dimen/input_width"
            android:layout_height="wrap_content"
            android:labelFor="@id/input_username"
            android:text="@string/placeholder_username"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/form_first_input"/>

        <EditText
            android:id="@+id/input_username"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/form_label_spacing"
            android:autofillHints="username"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/placeholder_username"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/label_password"
            android:layout_width="@dimen/input_width"
            android:layout_height="wrap_content"
            android:labelFor="@id/input_password"
            android:text="@string/placeholder_password"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/form_input_spacing" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/form_label_spacing"
            android:autofillHints="password"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:text="@string/placeholder_password"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_username" />

        <TextView
            android:layout_width="@dimen/input_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latofontfamily"
            android:text="@string/label_server_ip"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/form_input_spacing" />

        <EditText
            android:id="@+id/server_ip_txt"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/form_label_spacing"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/latofontfamily"
            android:text="@string/placeholder_server_ip"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="@dimen/input_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latofontfamily"
            android:text="@string/label_server_port"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/form_input_spacing"   />

        <EditText
            android:id="@+id/server_port_txt"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/form_label_spacing"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/latofontfamily"
            android:inputType="number"
            android:text="@string/placeholder_server_port"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/long_btn_width"
        android:layout_height="@dimen/long_btn_height"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/colorAccentAlt"
        android:text="@string/login_string"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>